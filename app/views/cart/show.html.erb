<div class="m-4">
<h1>Mon panier : </h1>

<ul class="list-group list-group-flush">
<%@items.each do |item|%>
  <li class="list-group-item">

    <div class="row ">
      <img href="<%=item.image_url %>" class="d-block user-select-none col-3" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle" %>


      <div class="col-9">
      <h4><%= item.title%></h4>
      <p><%=item.price%> €</p> 
      <div class="d-flex">
        <a class="btn btn-outline-info" href="<%=item_path(item.id)%>" role="button">Voir la description</a><br /> 
        <a class="btn btn-outline-info" role="button">Supprimer</a><br /> 
        <%#= link_to 'Voir la description', item_path(), method :get %>
        <%#= link_to 'Supprimer du panier' %>
        <%= link_to "Supprimer du panier", item_join_table_item_cart_path(item.id), method: :delete %>

      </div>
      </div>



    </div>

  </li>
  <%end%>
</ul>
<br />

<div class="d-flex flex-column align-items-end">

<div class="m-4">
<h5> Total de la commande : </h5>
<%=@cart_total%> €
</div>
<br />
<br />
<div>
<button class="btn btn-lg btn-primary m-4" href="#" role="button">Payer ma commande</button><br /> 
</div>
</div>
</div>